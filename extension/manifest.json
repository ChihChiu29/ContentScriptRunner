{
  "manifest_version": 2,

  "name": "ContentScriptRunner",
  "description": "Runs content script from a provider.",
  "version": "1.1.0",
  "permissions": ["tabs", "<all_urls>", "storage"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "external_lib/jquery.min.js",
      "internal_lib/utils.js",
      "internal_lib/config_loader.js",

      "internal_lib/content_scripts_loader.js",
      "content_script_main.js"
    ],
    "run_at": "document_idle",
    "all_frames": false
  }],
  "background": {
    "page": "background/background.html"
  },
  "options_page": "options/options.html"
}
